{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"taskName": "eslint",
			"type": "shell",
			"windows": {
				"command": "eslint"
			},
			"linux": {
				"command": "eslint"
			},
			"osx": {
				"command": "eslint"
			},
			"args": [
				"./"
			],
			"presentation": {
				"echo": true,
				"reveal": "silent",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": "$eslint-stylish"
		},
		{
			"taskName": "run",
			"type": "shell",
			"windows": {
				"command": "web-ext"
			},
			"linux": {
				"command": "web-ext"
			},
			"osx": {
				"command": "web-ext"
			},
			"args": [
				"run",
				"-f",
				"nightly",
				"--url",
				"http://canvasblocker.local/test/"
			],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": []
		},
		{
			"taskName": "run current",
			"type": "shell",
			"windows": {
				"command": "web-ext"
			},
			"linux": {
				"command": "web-ext"
			},
			"osx": {
				"command": "web-ext"
			},
			"args": [
				"run",
				"--url",
				"http://canvasblocker.local/test/"
			],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": []
		},
		{
			"taskName": "build",
			"type": "shell",
			"windows": {
				"command": "web-ext"
			},
			"linux": {
				"command": "web-ext"
			},
			"osx": {
				"command": "web-ext"
			},
			"args": [
				"build",
				"--overwrite-dest"
			],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": []
		}
	]
}