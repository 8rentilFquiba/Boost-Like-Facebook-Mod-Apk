{
	"name": "canvasblocker",
	"title": "CanvasBlocker",
	"id": "CanvasBlocker@kkapsner.de",
	"description": "Blocks the JS-API for modifying <canvas> to prevent Canvas-Fingerprinting.",
	"preferences": [
		{
			"name": "whiteList",
			"title": "White list",
			"type": "string",
			"value": "kkapsner.de,^https?://(\\\\w+\\\\.)*google.[a-z]+/maps"
		},
		{
			"name": "blockAll",
			"title": "Block everything",
			"type": "bool",
			"value": false
		},
		{
			"name": "blackList",
			"title": "Black list",
			"type": "string",
			"value": ""
		},
		{
			"name": "askPermission",
			"title": "Ask for permission",
			"type": "bool",
			"value": true
		},
		{
			"name": "askInvisiblePermission",
			"title": "Ask for permission for invisible elements",
			"type": "bool",
			"value": false
		},
		{
			"name": "allowPDFCanvas",
			"title": "Allow canvas in PDFs",
			"type": "bool",
			"value": true
		}
	],
	"author": "Korbinian Kapsner",
	"license": "MPL 2.0",
	"version": "0.1.3",
	"permissions": {"private-browsing": true}
}
