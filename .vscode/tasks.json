{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"taskName": "eslint",
			"type": "shell",
			"windows": {
				"command": "eslint"
			},
			"linux": {
				"command": "eslint"
			},
			"osx": {
				"command": "eslint"
			},
			"args": ["./"],
			"presentation": {
				"echo": true,
				"reveal": "silent",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": "$eslint-stylish"
		}
	]
}